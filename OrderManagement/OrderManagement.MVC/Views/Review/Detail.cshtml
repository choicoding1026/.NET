<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Detail Page - @Model.ReviewTitle</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Model.ReviewTitle
            </div>
            <div class="panel-body">
                @Html.Raw(Model.ReviewContents)
            </div>
            <div class="panel-footer text-right">
                <a class="btn btn-primary" asp-controller="Review" asp-action="Index">목록</a>
            </div>
        </div>
    </div>
</div>