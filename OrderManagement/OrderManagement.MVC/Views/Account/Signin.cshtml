@model OrderManagement.ViewModel.SigninViewModel

<h2>로그인</h2>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Signin">
    <div class="form-group">
        <label>ID</label>
        <input type="text" asp-for="UserID" class="form-control" placeholder="ID 입력" />
        <span class="text-danger" asp-validation-for="UserID"></span>
    </div>
    <div class="form-group">
        <label>PW</label>
        <input type="password" asp-for="UserPW" class="form-control" placeholder="PW 입력" />
        <span class="text-danger" asp-validation-for="UserPW"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Signin</button>
    </div>
</form>