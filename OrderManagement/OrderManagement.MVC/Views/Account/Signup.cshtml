@model OrderManagement.Model.User

<h2>회원가입</h2>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Signup">
    <div class="form-group">
        <label>ID</label>
        <input type="text" class="form-control" asp-for="UserID" placeholder="ID를 입력하시오" />
        <span class="text-danger" asp-validation-for="UserID"></span>
    </div>

    <div class="form-group">
        <label>PW</label>
        <input type="text" class="form-control" asp-for="UserPW" placeholder="PW를 입력하시오" />
        <span class="text-danger" asp-validation-for="UserPW"></span>
    </div>

    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" asp-for="UserName" placeholder="이름을 입력하시오" />
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>

    <div class="form-group">
        <label>Phone</label>
        <input type="text" class="form-control" asp-for="UserPhone" placeholder="전화번호를 입력하시오" />
        <span class="text-danger" asp-validation-for="UserPhone"></span>
    </div>

    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" asp-for="UserAddress" placeholder="주소를 입력하시오" />
        <span class="text-danger" asp-validation-for="UserAddress"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">회원가입</button>
        <a class="btn btn-default" asp-controller="Account" asp-action="Index">취소</a>
    </div>
</form>