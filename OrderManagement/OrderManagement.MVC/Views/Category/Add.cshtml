@model OrderManagement.Model.Category

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <form class="form-horizontal" method="post" asp-controller="Category" asp-action="Add">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" asp-for="CateName" placeholder="이름 입력" />
                <span class="text-danger" asp-validation-for="CateName"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">등록</button>
                <a class="btn btn-default" asp-controller="Category" asp-action="Index">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>

</div>