@model OrderManagement.Model.Item

<h2>상품등록</h2>

<form class="form-horizontal" method="post" asp-controller="Item" asp-action="Add">
    <div class="form-group">
        <div class="form-control">
            <label>카테고리</label>
            <select asp-for="Cate" asp-items="@(new SelectList(@ViewBag.cateList, "CateNo", "CateName"))"></select>
            <span class="form-control" asp-validation-for="Cate"></span>
        </div>
    </div>

    <div class="form-group">
        <label>상품등록번호</label>
        <input type="text" class="form-control" asp-for="ItemID" placeholder="상품 등록번호를 입력하시오" />
        <span class="text-danger" asp-validation-for="ItemID"></span>
    </div>

    <div class="form-group">
        <label>상품명</label>
        <input type="text" class="form-control" asp-for="ItemName" placeholder="상품명을 입력하시오" />
        <span class="text-danger" asp-validation-for="ItemName"></span>
    </div>

    <div class="form-group">
        <label>판매가</label>
        <input type="text" class="form-control" asp-for="Price" placeholder="이름을 입력하시오" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">상품등록</button>
        <a class="btn btn-default" asp-controller="Item" asp-action="Index">취소</a>
    </div>
</form>