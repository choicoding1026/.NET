
<div class="text-center">
    <h1 class="display-4">Order</h1>
</div>
<form method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Category</th>
                <th>ProductName</th>
                <th>Price</th>
                <th>Cart</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Cate</td>
                <td>@item.ItemName</td>
                <td>@item.Price</td>
                <td>
                    <button type="submit" class="btn btn-primary" name="itemNo" value="@item.ItemNo" asp-controller="Order" asp-action="Cart"><i class="fa fa-shopping-cart"></i></button>
                </td>
            </tr>
            }
        </tbody>
    </table>
</form>

<div class="panel-footer text-right">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Cart">Go To Cart</a>
</div>