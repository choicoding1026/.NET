@model WebApplicationBoard.Models.Board;

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <form class="form-horizontal" method="post" asp-controller="Board" asp-action="Add">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" asp-for="BoardTitle" placeholder="제목 입력" />
                <span class="text-danger" asp-validation-for="BoardTitle"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control editor" asp-for="BoardContents" placeholder="내용 입력" rows="20"></textarea>
                <span class="text-danger" asp-validation-for="BoardContents"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">등록</button>
                <a class="btn btn-default" asp-controller="Board" asp-action="Index">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>

</div>
